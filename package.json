{
  "name": "devtools-framework",
  "version": "0.1.0",
  "description": "Universal development tools framework with AI skills and MCP orchestration",
  "main": "src/index.js",
  "bin": {
    "devtools": "./bin/devtools.js"
  },
  "scripts": {
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "lint": "eslint src/ --fix",
    "format": "prettier --write 'src/**/*.js'",
    "docs": "jsdoc -c jsdoc.json",
    "prepublishOnly": "npm test && npm run lint"
  },
  "keywords": [
    "devtools",
    "cli",
    "python",
    "mcp",
    "ai",
    "development"
  ],
  "author": "DevTools Framework",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "fs-extra": "^11.2.0",
    "inquirer": "^9.2.12",
    "ora": "^5.4.1",
    "cosmiconfig": "^9.0.0",
    "ajv": "^8.12.0",
    "dotenv": "^16.3.1",
    "semver": "^7.5.4",
    "execa": "^8.0.1"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "eslint": "^8.54.0",
    "prettier": "^3.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js"
    ]
  }
}
